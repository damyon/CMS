<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
<head>
  <title>Dhufish CMS - Delete Group </title>
  <link rel="stylesheet" type="text/css" href="<?cms urlRewrite("/cms/dhufish/css/popup.css"); ?>"></link>
  <script language="Javascript" type="text/javascript" src="<?cms urlRewrite("/cms/dhufish/js/popup.js"); ?>"></script>
  <script type="text/javascript" language="Javascript">
  
	function actionCancel() {
		window.close();
	}

	function showLoading() {
		var ele = document.getElementById("loading");
		ele.style.display = "block";
	}

	function actionOK() {
		showLoading();
	}

	function setFocus(ele) {
		var ele = document.getElementById(ele);
		ele.focus();
	}

	function setDefaultFocus() {
		setFocus("ok");
	}

	window.onload = setDefaultFocus;
  
  </script>
  <?cms
	string groupname;
	int groupid;
	map details;

	groupid = get("group");
	details = getGroupDetails(groupid);
	groupname = details["groupName"];
  ?>
</head>
<body>
  <div id="popupform">
    <form action="<?cms urlRewrite("/cms/dhufish/groupdeleteaction.cms"); ?>" method="POST">
	<div id="fields">
	<fieldset id="outer">
	<legend> Delete Group </legend>
	<p>Are you sure you want to delete this group?</p>
	<p><span>Groupname:</span>
	<?cms write(xmlEscape(groupname)); ?>
	</p>
	<div class="error"><?cms write(xmlEscape(get("error"))); ?></div>
	</fieldset>
	</div>
	<div id="actions">
	<p>
	<input type="hidden" name="group" value="<?cms write(xmlEscape(get("group"))); ?>"/>
	<input type="button" class="button" value="Cancel" onclick="actionCancel();"/>
	<input type="submit" class="button" value="OK" onclick="actionOK();" id="ok"/>
	</p>
	</div>
    </form>
  </div>
  <div id="loading"> <span>Please Wait...</span> </div>
</body>
</html>
