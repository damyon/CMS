  <script type="text/javascript" language="Javascript">
  
	function actionOK() {
		window.opener.document.location.reload();
		window.close();
	}

	function setFocus(ele) {
		var ele = document.getElementById(ele);
		ele.focus();
	}

	function setDefaultFocus() {
		setFocus("ok");
	}

	window.onload = setDefaultFocus;
  
  </script>
</head>
