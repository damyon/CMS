<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
<head>
  <title>Dhufish CMS - Add Permissions (/cms/<?cms write(xmlEscape(get("path"))); ?>)</title>
  <link rel="stylesheet" type="text/css" href="<?cms urlRewrite("/cms/dhufish/css/popup.css"); ?>"></link>
  <script language="Javascript" type="text/javascript" src="<?cms urlRewrite("/cms/dhufish/js/popup.js"); ?>"></script>
  <script type="text/javascript" language="Javascript">
  
	function actionCancel() {
		window.close();
	}

	function showLoading() {
		var ele = document.getElementById("loading");
		ele.style.display = "block";
	}

	function actionOK() {
		showLoading();
	}

	function setFocus(ele) {
		var ele = document.getElementById(ele);
		ele.focus();
	}

	function setDefaultFocus() {
		setFocus("group");
	}

	window.onload = setDefaultFocus;
  
  </script>
</head>
<body>
  <div id="popupform">
    <form action="<?cms urlRewrite("/cms/dhufish/permissionsaddaction.cms"); ?>" method="POST">
	<div id="fields">
	<fieldset id="outer">
	<legend> Add Permissions </legend>
	<p><span>Group:</span>
	<select name="group" id="group">
	<?cms
		array groups;
		map details;
		int i;

		groups = getGroupList("", 0, 2048);

		for (i = 0; i < arrayLength(groups); i++) {
			details = getGroupDetails(groups[i]["groupID"]);
			writeln("<option value=\"" + groups[i]["groupID"] + "\">" + xmlEscape(details["groupName"]) + "</option>");
		}
	?>
	</select>
	<?cms 
		string super;

		super = get("isSuperUser");

		if (super == "y") {
			writeln("<a href=\"javascript:void(0);\" onclick=\"openWindow('" + urlBase("/cms/dhufish/newgroup.cms") + "', '480', '320');\" rel=\"popup-480-240\" title=\"Create new group\"><img border=\"0\" alt=\"Create new group\" src=\"" + urlBase("/cms/dhufish/images/add.gif") + "\"/></a>");
		}
		?>
	</p>
	<p><span>Permissions:</span>
	<input type="checkbox" name="read"/> Read
	<input type="checkbox" name="write"/> Write
	<input type="checkbox" name="execute"/> Execute
	</p>
	<div class="error"><?cms write(xmlEscape(get("error"))); ?></div>
	</fieldset>
	</div>
	<div id="actions">
	<p>
	<input type="hidden" name="path" value="<?cms write(xmlEscape(get("path"))); ?>"/>
	<input type="button" class="button" value="Cancel" onclick="actionCancel();"/>
	<input type="submit" class="button" value="OK" onclick="actionOK();"/>
	</p>
	</div>
    </form>
  </div>
  <div id="loading"> <span>Please Wait...</span> </div>
</body>
</html>
