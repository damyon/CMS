			writeln("<li><a href=\"javascript:void(0);\" onclick=\"return popupWindow('" + urlBase("/cms/dhufish/delete.cms?path=" + xmlEscape(details["path"])) + "', 480, 240);\" title=\"Delete the file\"><img alt=\"Delete\" src=\"" + urlBase("/cms/dhufish/images/delete-red-16x16.png") + "\" width=\"16\" height=\"16\"/>Delete</a></li>");
		}
		if ((details["writePermission"] == 1) && (details["type"] == "CONTENT")) {
			writeln("<li><a href=\"javascript:void(0);\" onclick=\"return popupWindow('" + urlBase("/cms/dhufish/editpage.cms?path=" + xmlEscape(details["path"])) + "', 680, 640);\" title=\"Edit the contents of this file\"><img alt=\"Edit\" src=\"" + urlBase("/cms/dhufish/images/edit-red-16x16.png") + "\" width=\"16\" height=\"16\"/>Edit</a></li>");
			writeln("<li><a href=\"javascript:void(0);\" onclick=\"return popupWindow('" + urlBase("/cms/dhufish/editsource.cms?path=" + xmlEscape(details["path"])) + "', 680, 640);\" title=\"Edit the source of this file\"><img alt=\"Edit Source\" src=\"" + urlBase("/cms/dhufish/images/edit-red-16x16.png") + "\" width=\"16\" height=\"16\"/>Edit Source</a></li>");
		}
		if ((details["writePermission"] == 1) && (details["type"] == "RESOURCE")) {
			writeln("<li><a href=\"javascript:void(0);\" onclick=\"return popupWindow('" + urlBase("/cms/dhufish/editresource.cms?path=" + xmlEscape(details["path"])) + "', 640, 380);\" title=\"Upload a new resource file\"><img alt=\"Edit\" src=\"" + urlBase("/cms/dhufish/images/edit-red-16x16.png") + "\" width=\"16\" height=\"16\"/>Edit</a></li>");
		}
		if ((details["writePermission"] == 1) && (details["type"] != "RESOURCE") && (details["type"] != "FOLDER") && (details["type"] != "CONTENT")) {
			writeln("<li><a href=\"javascript:void(0);\" onclick=\"return popupWindow('" + urlBase("/cms/dhufish/editpage.cms?path=" + xmlEscape(details["path"])) + "', 680, 640);\" title=\"Edit this extension\"><img alt=\"Edit\" src=\"" + urlBase("/cms/dhufish/images/edit-red-16x16.png") + "\" width=\"16\" height=\"16\"/>Edit</a></li>");
		}
		if ((details["lockedByUserID"] == -1) && (details["type"] != "FOLDER") && (details["writePermission"] == 1)) {
			writeln("<li><a href=\"javascript:void(0);\" onclick=\"return popupWindow('" + urlBase("/cms/dhufish/lock.cms?path=" + xmlEscape(details["path"])) + "', 640, 240);\" title=\"Lock this file for editing\"><img alt=\"Lock\" src=\"" + urlBase("/cms/dhufish/images/lock-red-16x16.png") + "\" width=\"16\" height=\"16\"/>Lock</a></li>");	
		}
		writeln("<li><a href=\"javascript:void(0);\" onclick=\"return popupWindow('" + urlBase("/cms/dhufish/metadata.cms?path=" + xmlEscape(details["path"])) + "', 800, 480);\" title=\"View the file metadata\"><img alt=\"Metadata\" src=\"" + urlBase("/cms/dhufish/images/metadata-red-16x16.png") + "\" width=\"16\" height=\"16\"/>Metadata</a></li>");
		if ((details["type"] == "FOLDER") && (details["writePermission"] == 1)) {
			writeln("<li><a href=\"javascript:void(0);\" title=\"Notifications\" onclick=\"return popupWindow('" + urlBase("/cms/dhufish/notifications.cms?path=" + xmlEscape(details["path"])) + "', 800, 480);\"><img alt=\"Notifications\" src=\"" + urlBase("/cms/dhufish/images/notifications-red-16x16.png") + "\" width=\"16\" height=\"16\"/>Notifications</a></li>");
		}
		if ((details["type"] == "FOLDER")) {
			writeln("<li><a href=\"" + urlBase("/cms/dhufish/content.cms?path=" + xmlEscape(details["path"]) + "&pagination=" + page) + "\" title=\"Open the folder\"><img alt=\"Open\" src=\"" + urlBase("/cms/dhufish/images/open-red-16x16.png") + "\" width=\"16\" height=\"16\"/>Open</a></li>");
		}
		if ((details["writePermission"] == 1)) {
			writeln("<li><a href=\"javascript:void(0);\" onclick=\"return popupWindow('" + urlBase("/cms/dhufish/permissions.cms?path=" + xmlEscape(details["path"])) + "', 640, 480);\" title=\"Change the file permissions\"><img alt=\"Permissions\" src=\"" + urlBase("/cms/dhufish/images/permissions-red-16x16.png") + "\" width=\"16\" height=\"16\"/>Permissions</a></li>");
		}
		writeln("<li><a href=\"javascript:void(0);\" onclick=\"return popupWindow('" + urlBase("/cms/dhufish/properties.cms?path=" + xmlEscape(details["path"])) + "', 480, 420);\" title=\"View the file properties\"><img alt=\"Properties\" src=\"" + urlBase("/cms/dhufish/images/properties-red-16x16.png") + "\" width=\"16\" height=\"16\"/>Properties</a></li>");
		if (details["writePermission"] == 1) {
			writeln("<li><a href=\"javascript:void(0);\" onclick=\"return popupWindow('" + urlBase("/cms/dhufish/rename.cms?path=" + xmlEscape(details["path"])) + "', 480, 240);\" title=\"Rename the file\"><img alt=\"Rename\" src=\"" + urlBase("/cms/dhufish/images/rename-red-16x16.png") + "\" width=\"16\" height=\"16\"/>Rename</a></li>");
		}
		if ((details["lockedByUserID"] == uid) || ((details["lockedByUserID"] != "-1") && (super == "y"))) {
			writeln("<li><a href=\"javascript:void(0);\" onclick=\"return popupWindow('" + urlBase("/cms/dhufish/unlock.cms?path=" + xmlEscape(details["path"])) + "', 640, 240);\" title=\"Unlock the file for editing\"><img alt=\"Unlock\" src=\"" + urlBase("/cms/dhufish/images/unlock-red-16x16.png") + "\" width=\"16\" height=\"16\"/>Unlock</a></li>");
		}
		if ((details["writePermission"] == 1) && (details["type"] != "FOLDER")) {
			writeln("<li><a href=\"javascript:void(0);\" onclick=\"return popupWindow('" + urlBase("/cms/dhufish/versions.cms?path=" + xmlEscape(details["path"])) + "', 640, 480);\" title=\"View previous versions of this file\"><img alt=\"Versions\" src=\"" + urlBase("/cms/dhufish/images/versions-red-16x16.png") + "\" width=\"16\" height=\"16\"/>Versions</a></li>");
		}
		if ((details["type"] != "FOLDER") && (pathlist[0] != "templates")) {
			if (type[0] != "text") {
				writeln("<li><a href=\"" + urlBase("/cms/" + xmlEscape(details["path"]) + "?SAVEASFILENAME=" + xmlEscape(details["fileName"])) + "\" title=\"Download this file\" ><img alt=\"View\" src=\"" + urlBase("/cms/dhufish/images/view-red-16x16.png") + "\" width=\"16\" height=\"16\"/>View</a></li>");
			} else {
				writeln("<li><a href=\"javascript:void(0);\" onclick=\"return openWindow('" + urlBase("/cms/" + xmlEscape(details["path"])) + "');\" title=\"View this file in a new window\" ><img alt=\"View\" src=\"" + urlBase("/cms/dhufish/images/view-red-16x16.png") + "\" width=\"16\" height=\"16\"/>View</a></li>");
			}
		}
		if ((type[0] == "text") && (details["type"] != "FOLDER")) {
			writeln("<li><a href=\"javascript:void(0);\" onclick=\"openWindow('" + urlBase("/cms/" + xmlEscape(details["path"]) + "?parse=no") + "');\" title=\"View the source of this file\"><img alt=\"View Source\" src=\"" + urlBase("/cms/dhufish/images/source-red-16x16.png") + "\" width=\"16\" height=\"16\"/>View Source</a></li>");
		}
		if ((verifier) || (super == "y")) {
			writeln("<li><a href=\"javascript:void(0);\" onclick=\"return popupWindow('" + urlBase("/cms/dhufish/workflowcomments.cms?path=" + xmlEscape(details["path"])) + "', 640, 480);\" title=\"Workflow\"><img alt=\"Workflow\" src=\"" + urlBase("/cms/dhufish/images/workflow-red-16x16.png") + "\" width=\"16\" height=\"16\"/>Workflow</a></li>");
		}



		writeln("</ul>");
	}
	
	writeln("&nbsp;");
	writeln("</td>");
	writeln("</tr>");
	
	for (i = 0; i < arrayLength(files); i++) {
		// load the details for this file
		details = getFileDetails(files[i]["path"]);
		title = getFileMetadata(files[i]["path"], "dc:title");

		// get the file size in kb
		// convert to int
		size = details["fileSize"];
		// convert to kb
		size /= 1024;
		// do not show 0 size
		if (size == 0) 
			size = 1;

		// split the mime type
		type = split(details["mimeType"], "/");

		// write the table row
		if (i % 2) {
			write("<tr class=\"odd\"");
		} else {
			write("<tr class=\"even\"");
		}
		if (((path != "") && (path != "/")) || (details["path"] != "dhufish")) {
			writeln(" onclick=\"setSelection('row" + files[i]["fileID"] + "');\" id=\"row" + files[i]["fileID"] + "\">");	
		} else {
			writeln(" id=\"row" + files[i]["fileID"] + "\">");	
		}
		write("<td style=\"width: 30%;\"><img src=\"");

		// calculate the preview image
		if (details["type"] == "FOLDER") {
			write(urlBase("/cms/dhufish/images/folder-white-16x16.png"));
		} else if (details["type"] == "CONTENT") {
			write(urlBase("/cms/dhufish/images/content-white-16x16.png"));
		} else if (details["type"] == "RESOURCE") {
			// if this is an image show a preview
			if (type[0] == "image") {
				write(urlBase("/cms/" + details["path"] + "?image-size=16-16"));
			} else {
				write(urlBase("/cms/dhufish/images/resource-white-16x16.png"));
			}
		} else {
			write(urlBase("/cms/dhufish/extensions/" + details["type"] + "/icon.png"));
		}
		
		writeln("\" width=\"16\" height=\"16\" alt=\"Preview Icon\"/>");
		if (details["type"] == "FOLDER") {
			if (((path != "") && (path != "/")) || (details["path"] != "dhufish")) {
				writeln("<a href=\"javascript:void(0);\" ondblclick=\"return setLocation('" + urlBase("/cms/dhufish/content.cms?path=" + xmlEscape(details["path"]) + "&pagination=" + page) + "');\">");
			} else {
				writeln("<a href=\"javascript:void(0);\" class=\"disabled\">");
			}
		}
		writeln(xmlEscape(details["fileName"]));
		if (((path == "") || (path == "/")) && (details["path"] == "dhufish")) {
			write(" (system folder)");
		}
		if (details["type"] == "FOLDER") {
			writeln("</a>");
		}
		writeln("</td>");
		writeln("<td>" + xmlEscape(title) + "</td>");
		writeln("<td>" + (size) + " kb</td>");
		writeln("<td>" + xmlEscape(details["type"]) + "</td>");
		writeln("<td>" + getISODate(details["version"]) + "</td>");
		writeln("</tr>");	
	}

	while (i < 50) {
		writeln("<tr class=\"empty\"><td>&nbsp;</td><td>&nbsp;</td><td>&nbsp;</td><td>&nbsp;</td><td>&nbsp;</td></tr>");
		i++;
	}
	

?>
      </tbody>
    </table>
  </div>
  <div id="columnspacer">&nbsp;</div>
  <div id="footer">
    <p><?cms
	int found;
	int total;
	int skip;

	found = get("found");
	total = get("total");
	skip = get("skip");

	if (found > 0) {
		writeln("Displaying files " + (skip + 1) + " to " + (skip + found) + " of " + total + ".");
	} else {
		writeln("No files found.");
	}
	
	?>
    </p>
    <ul>
      <li>Page</li>
      <?cms
	int total;
	int skip;
	int i;

	page = get("pagination");
	if (page < 5) {
		page = 5;
	}
	total = get("total");
	skip = get("skip");
	
	for (i = 0; i < total; i += page) {
		if (i == skip) {
			writeln("<li>&nbsp;<strong>" + ((i / page) + 1) + "</strong></li>");
		} else {
			write("<li>&nbsp;");
			write("<a href=\"" + urlBase("/cms/dhufish/content.cms?path=" + xmlEscape(path) + "&filter=" + xmlEscape(get("filter")) + "&skip=" + i + "&pagination=" + page) + "\" title=\"Page " + ((i / page) + 1) + "\">");
			write(((i / page) + 1));
			write("</a></li>");
		}
	}
      ?>
    </ul>
  </div>
  </div>
</body>
</html>
